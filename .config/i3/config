# Screenshot
bindsym $mod+Print exec --no-startup-id scrot 'Screenshot\ from\ %Y-%m-%d %H-%M-%S.png' -e 'mv *.png ~/pix/ScreenShot/'
bindsym $mod+Alt+Print exec --no-startup-id scrot -s 'Screenshot\ from\ %Y-%m-%d %H-%M-%S.png' -e 'mv *.png ~/pix/ScreenShot/'
bindsym $mod+Ctrl+Print exec --no-startup-id scrot -u 'Screenshot\ from\ %Y-%m-%d %H-%M-%S.png' -e 'mv *.png ~/pix/ScreenShot/'
bindsym $mod+Shift+Print exec --no-startup-id /usr/bin/spectacle

