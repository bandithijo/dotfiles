case "$(cat /sys/class/net/w*/operstate 2>/dev/null)" in
	down) wifiicon="ï„§ " ;;
	up)   wifiicon="$(awk '/^\s*w/ { print "ï‚ž", int($3 * 100 / 70) }' /proc/net/wireless)" ;;
esac

printf "%s%s%s%s\n" "$wifiicon" "$(sed "s/down//;s/up/ ï’„/" /sys/class/net/e*/operstate 2>/dev/null)" "$(sed "s/.*/ ï’œ VPN/" /sys/class/net/tun*/operstate 2>/dev/null)" "$(if pgrep -f torrc >/dev/null 2>&1; then echo " ï€£TOR"; fi)"
