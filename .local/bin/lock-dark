    # i3lock -n --beep --color 002B36 --force-clock -i $tmpwall \
        # --indpos="$WIDTH-88:$HEIGHT-75" --timepos="$WIDTH/2:$HEIGHT/2+30" \
runlock () {
    i3lock -n --beep --color 002B36EE --force-clock -i $wallpaper\
        --indpos="$WIDTH/2:$HEIGHT/2+320" --timepos="$WIDTH/2:$HEIGHT/2+60" \
        --datepos="$WIDTH/2:$HEIGHT/2+130" \
        --insidevercolor=00000000 --insidewrongcolor=00000000 --insidecolor=00000000 \
        --ringvercolor=FFCC00aa --ringwrongcolor=ff0000aa --ringcolor=ededed77 \
        --keyhlcolor=ededed99 --bshlcolor=ededed99 --separatorcolor=00000000 \
        --layoutcolor=CCCCCCFF \
        --line-uses-ring \
        --timestr="%H%M" \
        --timecolor=CCCCCCFF \
        --time-font="JetBrainsMono Nerd Font Bandit" \
        --timesize=150 \
        --datestr="0%w%Y%m%d" \
        --datecolor=CCCCCCAA \
        --date-font="JetBrainsMono Nerd Font Bandit" \
        --datesize=12 \
        --radius 20 --ring-width 15 \
        --indicator \
        --veriftext="" \
        --wrongtext="" \
        --noinputtext="" \
        --locktext="" \
        --lockfailedtext=""
}

